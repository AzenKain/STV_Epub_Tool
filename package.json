{
  "name": "stv-epub-tool",
  "version": "1.0.0",
  "description": "Crawl novels from SangTacViet and convert to EPUB",
  "main": "electron/main.js",
  "scripts": {
    "start": "cross-env node --no-deprecation -r ts-node/register src/index.ts",
    "build": "tsc && nexe dist/index.js -t windows-x64-20.5.0 -o stv_crawl.exe --build",
    "electron": "tsc && electron .",
    "electron:dev": "tsc --watch & electron .",
    "build:mac": "tsc && electron-builder --mac",
    "build:mac:dmg": "tsc && electron-builder --mac dmg",
    "build:mac:zip": "tsc && electron-builder --mac zip",
    "build:win": "tsc && electron-builder --win",
    "build:all": "tsc && electron-builder --mac --win"
  },
  "keywords": ["epub", "crawler", "sangtacviet", "novel"],
  "author": "AzenKain",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.azenkain.stv-epub-tool",
    "productName": "STV Epub Tool",
    "copyright": "Copyright 2025",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "extensions/**/*",
      "vie.traineddata",
      "node_modules/**/*",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/*.md"
    ],
    "extraResources": [
      {
        "from": "extensions",
        "to": "extensions"
      },
      {
        "from": "vie.traineddata",
        "to": "vie.traineddata"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "title": "${productName} ${version}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "asar": true
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "bootstrap-icons": "^1.13.1",
    "epub-gen-memory": "^1.1.2",
    "playwright": "^1.57.0",
    "slugify": "^1.6.6",
    "tesseract.js": "^6.0.1"
  }
}
